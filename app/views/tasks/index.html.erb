<% if logged_in? %>
  <p>ログイン完了ユーザー: <%= current_user.name %></p>
  
  <h1>タスク一覧</h1>
  
  <%= render 'tasks/tasks' , tasks: @tasks %>
  
  <p><%= link_to '新規作成', new_task_path %></p>
  <button><%= link_to 'Log out', logout_path, method: :delete %></button>
  
<% else %>
  <h1>Sign up!!!</h1>
  
  <button><%= link_to 'Sign up now!' , signup_path %></button>
  <button><%= link_to 'Log in!', login_path %></button>
<% end %>
